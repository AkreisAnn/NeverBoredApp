WindowManager:
    WelcomeScreen:
    LogInScreen:
    CreateAccountScreen:
    MainAppScreen:

<WelcomeScreen>
    name: "welcome"
    canvas.before:
        Color:
            rgba: (0.35,0.9,0.9,0.7)
        Rectangle:
            pos: self.pos
            size: self.size
    FloatLayout:
        size: root.width, root.height
        Label:
            pos_hint:{"x":0,"y":0.2}
            font_size:35
            color: 1,1,1
            text:"Welcome to NeverBored!"
        GridLayout:
            pos_hint:{"x":0.3,"y":0.4}
            size_hint:(0.4,0.15)
            cols:1
            Button:
                background_color: (0.35,0.9,0.9,0.7)
                color: (1,1,1,1)
                text:"Log in"
                on_press:
                    app.root.current = "login"
                    root.manager.transition.direction = "left"
        GridLayout:
            pos_hint:{"x":0.3,"y":0.1}
            size_hint:(0.4,0.15)
            cols:1
            Label:
                id: create
                font_size:15
                color: 1,1,1
                text:"Don't have an account yet?"
            Button:
                text:"Create one!"
                background_color:(0.35,0.9,0.9,0.7)
                on_press:
                    app.root.current = "create"
                    root.manager.transition.direction = "right"


<LogInScreen>
    name: "login"
    email: email
    password: password
    canvas.before:
        Color:
            rgba: (0.35,0.9,0.9,0.7)
        Rectangle:
            pos: self.pos
            size: self.size
    FloatLayout:
        size: root.width, root.height
        Label:
            pos_hint:{"x":0,"y":0.2}
            font_size:40
            color: 1,1,1,1
            text:"Log In"
        GridLayout:
            pos_hint:{"x":0.2,"y":0.5}
            size_hint:(0.5,0.1)
            cols:2
            Label:
                text:"Email:"
            TextInput:
                id: email
                multiline: False
            Label:
                text:"Password:"
            TextInput:
                id: password
                multiline: False
        Button:
            pos_hint:{"x":0.4,"y":0.35}
            size_hint:(0.2,0.1)
            background_color: (0.35,0.9,0.9,0.7)
            text:"Submit"
            on_press:
                root.submit()
                root.manager.transition.direction = "left"
        Button:
            pos_hint:{"x":0.05,"y":0.9}
            size_hint:(0.2,0.05)
            background_color: (0.35,0.9,0.9,0.7)
            text:"Go back"
            on_press:
                app.root.current="welcome"
                root.manager.transition.direction = "right"

<CreateAccountScreen>
    name: "create"
    email: email
    nickname: nickname
    password: password
    canvas.before:
        Color:
            rgba: (0.35,0.9,0.9,0.7)
        Rectangle:
            pos: self.pos
            size: self.size
    FloatLayout:
        size: root.width, root.height
        Label:
            pos_hint:{"x":0,"y":0.2}
            font_size:40
            color: 1,1,1,1
            text:"Create an Account"
        GridLayout:
            pos_hint:{"x":0.2,"y":0.45}
            size_hint:(0.5,0.15)
            cols:2
            Label:
                text:"Name:"
            TextInput:
                id: nickname
                multiline: False
            Label:
                text:"Email:"
            TextInput:
                id: email
                multiline: False
            Label:
                text:"Password:"
            TextInput:
                id: password
                multiline: False
        Button:
            pos_hint:{"x":0.4,"y":0.3}
            size_hint:(0.2,0.1)
            background_color: (0.35,0.9,0.9,0.7)
            text:"Create Account"
            on_press:
                root.create()
                root.manager.transition.direction = "left"
        Button:
            pos_hint:{"x":0.75,"y":0.9}
            size_hint:(0.2,0.05)
            background_color: (0.35,0.9,0.9,0.7)
            text:"Go back"
            on_press:
                app.root.current="welcome"
                root.manager.transition.direction = "left"

<MainAppScreen>
    name: "main"
    canvas.before:
        Color:
            rgba: (1,1,1,1)
        Rectangle:
            pos: self.pos
            size: self.size
    FloatLayout:
        size: root.width, root.height
        GridLayout:
            pos_hint:{"x":0,"y":0.9}
            size_hint:(1,0.2)
            canvas:
                Color:
                    rgb: (0.063, 0.451, 0.451)
                Rectangle:
                    pos: self.pos
                    size: self.size
        Spinner:
            pos_hint:{"x":0.8,"y":0.9}
            size_hint:(0.2,0.1)
            background_color: (0.35,0.9,0.9,0.9)
            id: account_spinner
            text: "Name"
            values: ["Settings","Log Out"]
            on_text:
                root.spinner_account(account_spinner.text)

        Button:
            pos_hint:{"x":0.4,"y":0.2}
            size_hint:(0.2,0.05)
            text:"LogOut"
            background_color:(0.3,0.9,0.7)
            on_press:
                app.root.current="welcome"
                root.manager.transition.direction = "right"